<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
                    readonly="true" class="readonly"
                    description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="name" type="text" size="255" class="inputbox"
                 label="COM_MINIQUIZ_FORM_LBL_QUESTION_NAME" description="COM_MINIQUIZ_FORM_DESC_QUESTION_NAME" 
                
                 required="true" 
                filter="safehtml" /> 

       <field name="varianta" type="text" size="255" class="inputbox"
                 label="COM_MINIQUIZ_FORM_LBL_QUESTION_VARIANTA" description="COM_MINIQUIZ_FORM_DESC_QUESTION_VARIANTA" 
                
                 required="true" 
                filter="safehtml" /> 

       <field name="variantb" type="text" size="255" class="inputbox"
                 label="COM_MINIQUIZ_FORM_LBL_QUESTION_VARIANTB" description="COM_MINIQUIZ_FORM_DESC_QUESTION_VARIANTB" 
                
                 required="true" 
                filter="safehtml" /> 

       <field name="variantc" type="text" size="255" class="inputbox"
                 label="COM_MINIQUIZ_FORM_LBL_QUESTION_VARIANTC" description="COM_MINIQUIZ_FORM_DESC_QUESTION_VARIANTC" 
                
                 required="true" 
                filter="safehtml" /> 

       <field name="variantd" type="text" size="255" class="inputbox"
                 label="COM_MINIQUIZ_FORM_LBL_QUESTION_VARIANTD" description="COM_MINIQUIZ_FORM_DESC_QUESTION_VARIANTD" 
                
                 required="true" 
                filter="safehtml" /> 

       <field name="value" type="list" size="1" class="inputbox"
                 label="COM_MINIQUIZ_FORM_LBL_QUESTION_VALUE" description="COM_MINIQUIZ_FORM_DESC_QUESTION_VALUE" 
                 default="A" 
                 required="true" >
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
            </field> 
	    
		<field name="imageurl" type="media" directory="questions"
			hide_none="1" label="COM_MINIQUIZ_QUESTION_IMAGE_LABEL"
			size="40"
			description="COM_MINIQUIZ_QUESTION_IMAGE_LABEL" />

       <field name="imagedesc" type="text" size="255" class="inputbox"
                 label="COM_MINIQUIZ_FORM_LBL_QUESTION_IMAGE_DESC" description="COM_MINIQUIZ_FORM_LBL_QUESTION_IMAGE_DESC" 
                
                 required="false" 
                filter="safehtml" /> 

         <field
                name="state"
                type="list"
                label="JSTATUS"
                description="JFIELD_PUBLISHED_DESC"
                class="inputbox"
                size="1"
                default="1">
                <option value="1">JPUBLISHED</option>
                <option value="0">JUNPUBLISHED</option>
            </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
                <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
